@{
    ViewData["Title"] = "Home Page";
}

<!-- Link to the stylesheet located in wwwroot/css -->
<head>
    <link rel="stylesheet" href="~/css/Home/HomeIndex.css" asp-append-version="true" />    
</head>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<title>Featured Products</title>

<header class="header">
    <h1>Featured Products</h1>
    <p>Discover our top picks for this season</p>
</header>

<div class="container">
    <section class="products">
        <!-- Product 1 -->
        <div class="product-card">
            <img src="product1.jpg" alt="Product 1" class="product-image">
            <div class="product-info">
                <h2 class="product-name">Product Name 1</h2>
                <p class="product-description">This is a brief description of the first product. It's designed to attract and inform potential buyers.</p>
                <p class="product-price">$29.99</p>
                <a href="#" class="btn">View Product</a>
            </div>
        </div>

        <!-- Product 2 -->
        <div class="product-card">
            <img src="product2.jpg" alt="Product 2" class="product-image">
            <div class="product-info">
                <h2 class="product-name">Product Name 2</h2>
                <p class="product-description">This is a brief description of the second product. Highlight key features or unique selling points.</p>
                <p class="product-price">$39.99</p>
                <a href="#" class="btn">View Product</a>
            </div>
        </div>

        <!-- Product 3 -->
        <div class="product-card">
            <img src="product3.jpg" alt="Product 3" class="product-image">
            <div class="product-info">
                <h2 class="product-name">Product Name 3</h2>
                <p class="product-description">This is a brief description of the third product. Provide enticing details to draw in customers.</p>
                <p class="product-price">$49.99</p>
                <a href="#" class="btn">View Product</a>
            </div>
        </div>

        <!-- Add more products as needed -->
    </section>
</div>