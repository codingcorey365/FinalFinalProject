@model Employee


<h2>Create a New Employee</h2>

@using (Html.BeginForm("InsertEmployeeToDatabase", "Employee", "Post"))

{
    <!-- EmployeeId -->
    <input asp-for= "EmployeeId" type="hidden" value="" />

    <!-- Name: First, Middle, Last -->
    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="" />

    <label asp-for="MiddleName" class="control-label">Middle Name</label>
    <input type="text" name="MiddleName" class="form-control" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" />

    <!-- Birth Information -->
    <label asp-for="BirthDay" class="control-label">Birth Day</label>
    <input type="number" name="BirthDay" class="form-control" />

    <label asp-for="BirthMonth" class="control-label">Birth Month</label>
    <input type="number" name="BirthMonth" class="form-control" />

    <label asp-for="BirthYear" class="control-label">Birth Year</label>
    <input type="number" name="BirthYear" class="form-control" />

    <!-- Age -->
    <label asp-for="Age" class="control-label">Age</label>
    <input type="number" name="Age" class="form-control" />

    <!-- Contact Information -->
    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="email" name="EmailAddress" class="form-control" />

    <label asp-for="HomeAddress" class="control-label">Home Address</label>
    <input type="text" name="HomeAddress" class="form-control" />

    <!-- Current Position -->
    <label asp-for="EmployeeDepartment" class="control-label">Department</label>
    <input type="text" name="EmployeeDepartment" class="form-control" />

    <label asp-for="EmployeeTitle" class="control-label">Title</label>
    <input type="number" name="EmployeeTitle" class="form-control" />

    <label asp-for="PayRate" class="control-label">Pay Rate</label>
    <input type="number" name="PayRate" class="form-control" />

    <label asp-for="HoursWorked" class="control-label">Hours Worked</label>
    <input type="number" name="HoursWorked" class="form-control" />

    <!-- Submit -->
    <input type="submit" value="Create Employee" class="btn btn-primary" />
}
